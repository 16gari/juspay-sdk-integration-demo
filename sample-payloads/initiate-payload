<script id="Initiate">
    let hyperScript = document.createElement("script");
      hyperScript.onload = function(){
        window.hyperServicesObject = new window.HyperServices();
        var initiatePayload = {
                "requestId": "0857d16c-cd71-40f6-8f77-f178f63963e9", // This id has to be generated for every n
                "service": "in.juspay.hyperpay",
                "payload": {
                  "action": "initiate",
                  "hyperSDKDiv": "HyperSDKDiv",
                  "integrationType": "iframe",
                  "environment": "production", // For sandbox the value should be sandbox instead of production
                  "merchantId": "melorrapay",
                  "clientId": "melorrapay"
} }
        window.hyperServicesObject.initiate(initiatePayload)
      }
      hyperScript.onerror = function (){
        console.error("Initiate failed")
}
      hyperScript.setAttribute("src", "https://public.releases.juspay.in/hyper-sdk-web/HyperServices.js");
      hyperScript.setAttribute("service", "in.juspay.hyperpay");
      document.body.appendChild(hyperScript);
</script>